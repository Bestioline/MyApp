<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ricetta"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/id_card__ricetta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:persistentDrawingCache="animation"
        app:cardBackgroundColor="@color/common_google_signin_btn_text_dark_disabled"
        app:cardCornerRadius="@dimen/nav_header_vertical_spacing"
        app:cardElevation="@dimen/nav_header_vertical_spacing"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/image_dolce"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:clickable="false"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:id="@+id/id_linearLayout_cardCake"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:animateLayoutChanges="true"
            android:clickable="false"
            android:orientation="vertical"
            tools:visibility="visible">

            <TextView
                android:id="@+id/nome_ricetta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#A4E2E2E2"
                android:fontFamily="cursive"
                android:foreground="#00FCF9F9"
                android:gravity="center"
                android:text="Nome Ricetta"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nome_cuoco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#86EEEEEE"
                android:fontFamily="cursive"
                android:gravity="top|right"
                android:text="Nome Cuoco"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteY="142dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/common_google_signin_btn_text_dark_focused"
                tools:ignore="UnknownId" />

        </LinearLayout>
        />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
